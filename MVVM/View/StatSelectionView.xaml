							Background="Transparent"
							Opacity="0.5"
							Margin="15, 3, 10, 3" />

					<TextBox Grid.Column="1"
							 Margin="5, 1, 5, 1"
							 HorizontalContentAlignment="Center"
							 VerticalContentAlignment="Center"
							 Text="5"
							 FontSize="20"
							 FontFamily="Yu Gothic UI Semibold"
							 Background="#443b3b"
							 Foreground="White"
							 BorderThickness="2"
							 BorderBrush="Black" />

					<Image Source="/Images/RightArrow.png"
						   Grid.Column="2"
						   Margin="5" />

					<Button Grid.Column="2"
							Grid.Row="0"
							Style="{StaticResource RoundedButtonTheme}"
							Background="Transparent"
							Opacity="0.5"
							Margin="10, 3, 15, 3" />

				</Grid>
			</Border>

			<!-- Vitality Stat -->
			<Border Grid.Column="0"
					Grid.Row="3"
					Background="#23242b">
				<TextBlock Text="Vitality:"
						   HorizontalAlignment="Right"
						   VerticalAlignment="Center"
						   Foreground="White"
						   FontSize="20"
						   FontFamily="Yu Gothic UI Semibold"
						   Margin="10,0,10,0" />
			</Border>

			<Border Grid.Column="1"
					Grid.Row="3"
					Background="#23242b">
				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="72" />
						<ColumnDefinition />
						<ColumnDefinition Width="72" />
					</Grid.ColumnDefinitions>

					<Image Source="/Images/LeftArrow.png"
						   Margin="5" />

					<Button Grid.Column="0"
							Grid.Row="0"
							Style="{StaticResource RoundedButtonTheme}"
							Background="Transparent"
							Opacity="0.5"
							Margin="15, 3, 10, 3" />

					<TextBox Grid.Column="1"
							 Margin="5, 1, 5, 1"
							 HorizontalContentAlignment="Center"
							 VerticalContentAlignment="Center"
							 Text="5"
							 FontSize="20"
							 FontFamily="Yu Gothic UI Semibold"
							 Background="#443b3b"
							 Foreground="White"
							 BorderThickness="2"
							 BorderBrush="Black" />

					<Image Source="/Images/RightArrow.png"
						   Grid.Column="2"
						   Margin="5" />

					<Button Grid.Column="2"
							Grid.Row="0"
							Style="{StaticResource RoundedButtonTheme}"
							Background="Transparent"
							Opacity="0.5"
							Margin="10, 3, 15, 3" />

				</Grid>
			</Border>

			<!-- Luck Stat -->
			<Border Grid.Column="0"
					Grid.Row="4"
					Background="#444755">
				<TextBlock Text="Luck:"
						   HorizontalAlignment="Right"
						   VerticalAlignment="Center"
						   Foreground="White"
						   FontSize="20"
						   FontFamily="Yu Gothic UI Semibold"
						   Margin="10,0,10,0" />
			</Border>

			<Border Grid.Column="1"
					Grid.Row="4"
					Background="#444755">
				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="72" />
						<ColumnDefinition />
						<ColumnDefinition Width="72" />
					</Grid.ColumnDefinitions>

					<Image Source="/Images/LeftArrow.png"
						   Margin="5" />

					<Button Grid.Column="0"
							Grid.Row="0"
							Style="{StaticResource RoundedButtonTheme}"
							Background="Transparent"
							Opacity="0.5"
							Margin="15, 3, 10, 3" />

					<TextBox Grid.Column="1"
							 Margin="5, 1, 5, 1"
							 HorizontalContentAlignment="Center"
							 VerticalContentAlignment="Center"
							 Text="5"
							 FontSize="20"
							 FontFamily="Yu Gothic UI Semibold"
							 Background="#443b3b"
							 Foreground="White"
							 BorderThickness="2"
							 BorderBrush="Black" />

					<Image Source="/Images/RightArrow.png"
						   Grid.Column="2"
						   Margin="5" />

					<Button Grid.Column="2"
							Grid.Row="0"
							Style="{StaticResource RoundedButtonTheme}"
							Background="Transparent"
							Opacity="0.5"
							Margin="10, 3, 15, 3" />

				</Grid>
			</Border>

			<!-- Magic Stat -->
			<Border Grid.Column="0"
					Grid.Row="5"
					Background="#23242b">
				<TextBlock Text="Magic:"
						   HorizontalAlignment="Right"
						   VerticalAlignment="Center"
						   Foreground="White"
						   FontSize="20"
						   FontFamily="Yu Gothic UI Semibold"
						   Margin="10,0,10,0" />
			</Border>

			<Border Grid.Column="1"
					Grid.Row="5"
					Background="#23242b">
				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="72" />
						<ColumnDefinition />
						<ColumnDefinition Width="72" />
					</Grid.ColumnDefinitions>

					<Image Source="/Images/LeftArrow.png"
						   Margin="5" />

					<Button Grid.Column="0"
							Grid.Row="0"
							Style="{StaticResource RoundedButtonTheme}"
							Background="Transparent"
							Opacity="0.5"
							Margin="15, 3, 10, 3" />

					<TextBox Grid.Column="1"
							 Margin="5, 1, 5, 1"
							 HorizontalContentAlignment="Center"
							 VerticalContentAlignment="Center"
							 Text="5"
							 FontSize="20"
							 FontFamily="Yu Gothic UI Semibold"
							 Background="#443b3b"
							 Foreground="White"
							 BorderThickness="2"
							 BorderBrush="Black" />

					<Image Source="/Images/RightArrow.png"
						   Grid.Column="2"
						   Margin="5" />

					<Button Grid.Column="2"
							Grid.Row="0"
							Style="{StaticResource RoundedButtonTheme}"
							Background="Transparent"
							Opacity="0.5"
							Margin="10, 3, 15, 3" />

				</Grid>
			</Border>

			<!-- Weapon use Stat -->
			<Border Grid.Column="0"
					Grid.Row="6"
					Background="#444755">
				<TextBlock Text="Weapon use:"
						   HorizontalAlignment="Right"
						   VerticalAlignment="Center"
						   Foreground="White"
						   FontSize="20"
						   FontFamily="Yu Gothic UI Semibold"
						   Margin="10,0,10,0" />
			</Border>

			<Border Grid.Column="1"
					Grid.Row="6"
					Background="#444755">
				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="72" />
						<ColumnDefinition />
						<ColumnDefinition Width="72" />
					</Grid.ColumnDefinitions>

					<Image Source="/Images/LeftArrow.png"
						   Margin="5" />

					<Button Grid.Column="0"
							Grid.Row="0"
							Style="{StaticResource RoundedButtonTheme}"
							Background="Transparent"
							Opacity="0.5"
							Margin="15, 3, 10, 3" />

					<TextBox Grid.Column="1"
							 Margin="5, 1, 5, 1"
							 HorizontalContentAlignment="Center"
							 VerticalContentAlignment="Center"
							 Text="5"
							 FontSize="20"
							 FontFamily="Yu Gothic UI Semibold"
							 Background="#443b3b"
							 Foreground="White"
							 BorderThickness="2"
							 BorderBrush="Black" />

					<Image Source="/Images/RightArrow.png"
						   Grid.Column="2"
						   Margin="5" />

					<Button Grid.Column="2"
							Grid.Row="0"
							Style="{StaticResource RoundedButtonTheme}"
							Background="Transparent"
							Opacity="0.5"
							Margin="10, 3, 15, 3" />

				</Grid>
			</Border>

			<!-- Parry Stat -->
			<Border Grid.Column="0"
					Grid.Row="7"
					Background="#23242b">
				<TextBlock Text="Parry:"
						   HorizontalAlignment="Right"
						   VerticalAlignment="Center"
						   Foreground="White"
						   FontSize="20"
						   FontFamily="Yu Gothic UI Semibold"
						   Margin="10,0,10,0" />
			</Border>

			<Border Grid.Column="1"
					Grid.Row="7"
					Background="#23242b">
				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="72" />
						<ColumnDefinition />
						<ColumnDefinition Width="72" />
					</Grid.ColumnDefinitions>

					<Image Source="/Images/LeftArrow.png"
						   Margin="5" />

					<Button Grid.Column="0"
							Grid.Row="0"
							Style="{StaticResource RoundedButtonTheme}"
							Background="Transparent"
							Opacity="0.5"
							Margin="15, 3, 10, 3" />

					<TextBox Grid.Column="1"
							 Margin="5, 1, 5, 1"
							 HorizontalContentAlignment="Center"
							 VerticalContentAlignment="Center"
							 Text="5"
							 FontSize="20"
							 FontFamily="Yu Gothic UI Semibold"
							 Background="#443b3b"
							 Foreground="White"
							 BorderThickness="2"
							 BorderBrush="Black" />

					<Image Source="/Images/RightArrow.png"
						   Grid.Column="2"
						   Margin="5" />

					<Button Grid.Column="2"
							Grid.Row="0"
							Style="{StaticResource RoundedButtonTheme}"
							Background="Transparent"
							Opacity="0.5"
							Margin="10, 3, 15, 3" />

				</Grid>
			</Border>

			<!-- Dodge Stat -->
			<Border Grid.Column="0"
					Grid.Row="8"
					Background="#444755">
				<TextBlock Text="Dodge:"
						   HorizontalAlignment="Right"
						   VerticalAlignment="Center"
						   Foreground="White"
						   FontSize="20"
						   FontFamily="Yu Gothic UI Semibold"
						   Margin="10,0,10,0" />
			</Border>

			<Border Grid.Column="1"
					Grid.Row="8"
					Background="#444755">
				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="72" />
						<ColumnDefinition />
						<ColumnDefinition Width="72" />
					</Grid.ColumnDefinitions>

					<Image Source="/Images/LeftArrow.png"
						   Margin="5" />

					<Button Grid.Column="0"
							Grid.Row="0"
							Style="{StaticResource RoundedButtonTheme}"
							Background="Transparent"
							Opacity="0.5"
							Margin="15, 3, 10, 3" />

					<TextBox Grid.Column="1"
							 Margin="5, 1, 5, 1"
							 HorizontalContentAlignment="Center"
							 VerticalContentAlignment="Center"
							 Text="5"
							 FontSize="20"
							 FontFamily="Yu Gothic UI Semibold"
							 Background="#443b3b"
							 Foreground="White"
							 BorderThickness="2"
							 BorderBrush="Black" />

					<Image Source="/Images/RightArrow.png"
						   Grid.Column="2"
						   Margin="5" />

					<Button Grid.Column="2"
							Grid.Row="0"
							Style="{StaticResource RoundedButtonTheme}"
							Background="Transparent"
							Opacity="0.5"
							Margin="10, 3, 15, 3" />

				</Grid>
			</Border>

			<!-- Stealth Stat -->
			<Border Grid.Column="0"
					Grid.Row="9"
					Background="#23242b">
				<TextBlock Text="Stealth:"
						   HorizontalAlignment="Right"
						   VerticalAlignment="Center"
						   Foreground="White"
						   FontSize="20"
						   FontFamily="Yu Gothic UI Semibold"
						   Margin="10,0,10,0" />
			</Border>

			<Border Grid.Column="1"
					Grid.Row="9"
					Background="#23242b">
				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="72" />
						<ColumnDefinition />
						<ColumnDefinition Width="72" />
					</Grid.ColumnDefinitions>

					<Image Source="/Images/LeftArrow.png"
						   Margin="5" />

					<Button Grid.Column="0"
							Grid.Row="0"
							Style="{StaticResource RoundedButtonTheme}"
							Background="Transparent"
							Opacity="0.5"
							Margin="15, 3, 10, 3" />

					<TextBox Grid.Column="1"
							 Margin="5, 1, 5, 1"
							 HorizontalContentAlignment="Center"
							 VerticalContentAlignment="Center"
							 Text="5"
							 FontSize="20"
							 FontFamily="Yu Gothic UI Semibold"
							 Background="#443b3b"
							 Foreground="White"
							 BorderThickness="2"
							 BorderBrush="Black" />

					<Image Source="/Images/RightArrow.png"
						   Grid.Column="2"
						   Margin="5" />

					<Button Grid.Column="2"
							Grid.Row="0"
							Style="{StaticResource RoundedButtonTheme}"
							Background="Transparent"
							Opacity="0.5"
							Margin="10, 3, 15, 3" />

				</Grid>
			</Border>

		</Grid>
	</Grid>
</UserControl>
